@model Course.Models.Courses

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="categories">
    <ul class="categories__list d-flex flex-column gap-3 align-items-center">
        <li class="categories__item">
            <div class="categories__item--add">
                <a href="/Courses/Create"><i class="fa-solid fa-plus"></i></a>
            </div>
        </li>
        <li class="categories__item">
            <a href="#" style="" class="categories__item--active gap-2 border-m d-flex flex-column justify-content-center align-items-center">
                <i class="fa-solid fa-house"></i>
                <h6 class="text-default">Home</h6>
            </a>
        </li>
        <li class="categories__item">
            <a href="#" style="" class="categories__item--link gap-2 border-m d-flex flex-column justify-content-center align-items-center">
                <i class="fa-solid fa-road"></i>
                <h6 class="text-default">Lộ trình</h6>
            </a>

        </li>
        <li class="categories__item">
            <a href="#" style="" class="categories__item--link gap-2 border-m d-flex flex-column justify-content-center align-items-center">
                <i class="fa-solid fa-lightbulb"></i>
                <h6 class="text-default">Học</h6>
            </a>

        </li>

        <li class="categories__item">
            <a href="#" style="" class="categories__item--link gap-2 border-m d-flex flex-column justify-content-center align-items-center">
                <i class="fa-solid fa-newspaper"></i>
                <h6 class="text-default">Blog</h6>
            </a>

        </li>
    </ul>
</div>
<div class="container">
    <h2>DELETE</h2>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.LabelFor(model => model.course_id, "Email", htmlAttributes: new { @class = "control-label col-md-2" })

            </dt>

            <dd>
                @Html.DisplayFor(model => model.AspNetUser.Email)
            </dd>

            <dt>
                @Html.LabelFor(model => model.title, "Tên Khóa Học", htmlAttributes: new { @class = "control-label col-md-2" })
            </dt>

            <dd>
                @Html.DisplayFor(model => model.title)
            </dd>

            <dt>
                @Html.LabelFor(model => model.Category.Name, "Chủ Đề", htmlAttributes: new { @class = "control-label col-md-2" })

            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category.Name)
            </dd>
            <dt>
                @Html.LabelFor(model => model.Level.Name, "Độ Khó", htmlAttributes: new { @class = "control-label col-md-2" })

            </dt>

            <dd>
                @Html.DisplayFor(model => model.Level.Name)
            </dd>
            <dt>
                @Html.LabelFor(model => model.Level.Name,"", htmlAttributes: new { @class = "control-label col-md-2" })

            </dt>


            <dt>
                @Html.LabelFor(model => model.img_course, "Mô Tả Khóa Học", htmlAttributes: new { @class = "control-label col-md-2" })

            </dt>

            <dd>
                @Html.DisplayFor(model => model.description)
            </dd>


            <dt>
                @Html.LabelFor(model => model.price, "Giá Khóa Học", htmlAttributes: new { @class = "control-label col-md-2" })

            </dt>
            <dd>
                @Html.DisplayFor(model => model.price)
            </dd>

            <dd>
                @Html.HiddenFor(model => model.img_course, new { htmlAttributes = new { @class = "form-control" } })
                <img src="@Url.Content(Model.img_course)" style="height: 200px; width:200px; margin:10px;" id="preViewImage" />
                @*<input type="file" name="ImageUpload" value="" accept="" onchange="ShowImage(this, document.getElementById('preViewImage'))" />*@
                @Html.ValidationMessageFor(model => model.img_course, "", new { @class = "text-danger" })
            </dd>

            <dt>
                @Html.LabelFor(model => model.duration, "Thời Gian", htmlAttributes: new { @class = "control-label col-md-2" })
            </dt>

            <dd>
                @Html.DisplayFor(model => model.duration)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>


