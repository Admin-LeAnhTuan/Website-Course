@model Course.Models.Courses

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Courses</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.img_course, "Email", htmlAttributes: new { @class = "control-label col-md-2" })

        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetUser.Email)
        </dd>

        <dt>
            @Html.LabelFor(model => model.img_course, "Tên Khóa Học", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

        <dt>
            @Html.LabelFor(model => model.img_course, "Tiêu Đề", htmlAttributes: new { @class = "control-label col-md-2" })

        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>

        <dt>
            @Html.LabelFor(model => model.img_course, "Tên Khóa Học", htmlAttributes: new { @class = "control-label col-md-2" })

        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
            @Html.LabelFor(model => model.img_course, "Mô Tả Khóa Học", htmlAttributes: new { @class = "control-label col-md-2" })

        </dt>

        <dd>
            @Html.DisplayFor(model => model.price)
        </dd>
         
        <dt>
            @Html.LabelFor(model => model.img_course, "Giá Khóa Học", htmlAttributes: new { @class = "control-label col-md-2" })

        </dt>

        <dd>
            @Html.HiddenFor(model => model.img_course, new { htmlAttributes = new { @class = "form-control" } })
            <img src="@Url.Content(Model.img_course)" style="height: 200px; width:200px; margin:10px;" id="preViewImage" />
            @*<input type="file" name="ImageUpload" value="" accept="" onchange="ShowImage(this, document.getElementById('preViewImage'))" />*@
            @Html.ValidationMessageFor(model => model.img_course, "", new { @class = "text-danger" })
        </dd>

        <dt>
            @Html.LabelFor(model => model.img_course, "Thời Gian", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.duration)
        </dd>

    </dl>
</div>
<p>
